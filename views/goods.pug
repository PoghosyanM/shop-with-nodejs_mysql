include header

div(class="wrap")
    div(class="content")
        header(class="site-header")
            include siteHeader
        
        div(class="container")
            div(class="row")
                div(class="col col-md-12")
                    h2(class='panel-title') #{goods['name']}
                div(class="col col-md-4")
                    img(
                        src="images/"+goods['image']
                        class="goods-big-image"
                        alt="good"
                    )
                div(class="col col-md-8")
                    p #{goods['description']}
                    span(class="success") Price: #{(goods['cost'] * 8).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&.')} AMD 
                    div
                        button(
                            class="button-success add-to-card"
                            data-goods_id=goods['id']
                        ) To Cart
        include nav
    include footer